
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/admPlantilla.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Proyectos
                </h1>
                   @{
                        if (ViewBag.val == "1")
                        {
                        <div class="alert alert-success" role="alert">@ViewBag.Message </div>
                        }
                        else if (ViewBag.val == "0")
                        {
                        <div class="alert alert-danger" role="alert">@ViewBag.Message </div>
                        }
                    }
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <button type="btnmodal" class="btn btn-primary" data-toggle="modal" data-target="#modalAdd">Agregar</button>
            </div>
        </div>
        <div class="row">

            <!--Abrir vista parcial donde@Html.Action("ActionResult", "Controlador")-->

        @Html.Action("detail","proyect")

        </div>

    </div>
    <!-- MODAL -->
    <div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @Html.Action("add", "proyect")
            </div>
        </div>
    </div>
</div>
