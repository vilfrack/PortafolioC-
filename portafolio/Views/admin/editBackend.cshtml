@model portafolio.Models.backend
@{
    Layout = null;
}

<form method="post" action="@Url.Action("editBackend", "admin")">
    <div class="form-group">
        <label for="ID" class="col-sm-3 control-label">ID</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.id, new { Class = "form-control", placeholder = "id" })
        </div>
        <br />
    </div>
    <div class="form-group">
        <label for="Descripcion" class="col-sm-3 control-label">Descripcion</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.descripcion, new { Class = "form-control", placeholder = "Descripcion" })
        </div>
        <br />
    </div>
    <div class="form-group">
        <label for="Porcentaje" class="col-sm-3 control-label">Porcentaje</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.porcentaje, new { Class = "form-control", placeholder = "Porcentaje" })
        </div>
        <br /><br /><br />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">agregar cambio</button>
    </div>
</form>

